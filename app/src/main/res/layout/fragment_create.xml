<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.homePages.create.CreateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Createapost"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Create a Post"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/Select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select a club"
            android:textSize="34dp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/Selectaclub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D3D3D3"
            android:textColor="#000000"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/Post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post"
            android:textSize="34dp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/Entertitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your title of the post"
            android:textColor="#000000" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="#D3D3D3"
            android:textColor="#000000" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:gravity="top|start"
                    android:hint="Type something here..."
                    android:layout_height="350dp"
                    android:background="#D3D3D3"
                    android:textColor="#000000" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/sendpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_gravity="end"
            android:text="Send post" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>