<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/postersProfileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="User's profile picture"
        android:scaleType="centerCrop"
        android:src="@drawable/hku_nexus_logo"
        tools:ignore="HardcodedText" /> <!-- TODO: Try to turn image into a cropped circle later: android:background="@drawable/ic_circle_outline"-->

    <TextView
        android:id="@+id/postersUsername"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="Username"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/timeSincePosted"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:paddingRight="20dp"
        android:text="4 days ago" />
</LinearLayout>